@model IEnumerable<StudentManagementProj.Models.course>

@{
    ViewBag.Title = "Index";
}




<p>
    <br />
    <a href="@Url.Content("~/courses/Create")" class="btn btn-success "><span class="glyphicon glyphicon-plus">Add New</span></a>
</p>
<table class="table">
    <tr>
        <th>
            Course
        </th>
        <th>
            Duration
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.course1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duration)
            </td>
            <td>
                <a href="@Url.Content("~/Course/Edit?id=")@item.Id" class="btn btn-primary "><span class="glyphicon glyphicon-edit"></span></a>
                <a href="@Url.Content("~/Course/Details?id=")@item.Id" class="btn btn-primary "><span class="glyphicon glyphicon-save"></span></a>
                <a href="@Url.Content("~/Course/Delete?id=")@item.Id" class="btn btn-danger "><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
    }

</table>
